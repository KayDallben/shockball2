{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "node": true,
        "jest": true,
        "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-shadow": [
      "error"
    ],
    "no-unused-vars": [
      "error"
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-console": [
      "warn"
    ],
    "handle-callback-err": [
      "error"
    ],
    "no-var": [
      "error"
    ],
    "require-yield": [
      "off"
    ]
  }
}
